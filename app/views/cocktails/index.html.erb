<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://blog.lecarnetdesbars.fr/wp-content/uploads/2016/01/bar-redwood-lyon-e1453315751601.jpg');">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p>BEST MIX IN TOWN!</p>
    <%= link_to "add a cocktail!", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="container, cards_container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://www.drinkinginamerica.com/wp-content/uploads/2014/09/iStock-15535646_lemon-drop-cocktails_s4x3_lg-e1410362447677.jpg');">
        <div class="card-category">SOMETHING HERE </div>
        <div class="card-description">
          <h2><%= cocktail.name %></h2>

          <p> <%= link_to "delete", cocktail_path(cocktail),
          method: :delete,
          data: { confirm: "Are you sure you want to delete the #{cocktail.name} ?" } %></p>
        </div>
        <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      </div>

    </div>
    <% end %>
  </div>
</div>


