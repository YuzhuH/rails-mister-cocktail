<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill if @cocktail.photo? %>');">

  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>

</div>


<p> Below the details:</p>
<% @doses.each do |dose| %>
<ul>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "delete", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure you want to delete the dose ?"} %>
  </li>
  <% end %>
</ul>


<p><%= link_to "home", cocktails_path %></p>
<p><%= link_to "edit this cocktail", edit_cocktail_path(@cocktail) %></p>

<h1>Create a new Dose!</h1>

<%=simple_form_for [@cocktail,@dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.submit "submit!", class: "btn btn-primary" %>
<% end %>


